<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net6</TargetFrameworks>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.1.1</Version>
    <PlatformTargets>x64;arm64</PlatformTargets>
    <StartupObject>SlideLibrary.Demo.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Glade\SlideView.glade" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Glade\SlideView.glade">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AForgeBio" Version="1.4.3" />
    <PackageReference Include="GtkSharp" Version="3.24.24.95" />
    <PackageReference Include="Mapsui" Version="4.1.1" />
    <PackageReference Include="Mapsui.Rendering.Skia" Version="4.1.1" />
    <PackageReference Include="SkiaSharp.Views.Forms" Version="2.88.6" />
    <PackageReference Include="SkiaSharp.Views.Forms.GTK" Version="2.88.6" />
    <PackageReference Include="SkiaSharp.Views.Gtk3" Version="2.88.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\OpenSlideSharp.BitmapExtensions\OpenSlideGTK.BitmapExtensions.csproj" />
    <ProjectReference Include="..\..\src\OpenSlideSharp.BruTile\OpenSlideGTK.BruTile.csproj" />
    <ProjectReference Include="..\..\src\OpenSlideSharp.OpencvExtensions\OpenSlideGTK.OpencvExtensions.csproj" />
    <ProjectReference Include="..\..\src\OpenSlideSharp\OpenSlideGTK.csproj" />
  </ItemGroup>

</Project>
